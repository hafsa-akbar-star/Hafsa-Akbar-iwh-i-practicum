doctype html
html 
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet" href="/css/style.css")
    body    
        a(href='/') Return to the homepage
        .form-wrapper
            h2 Pet Form
            br
            form(method="POST") 
                label(for="newval") New Pet Name
                input(type="text" name="pet_name" required) 
                label(for="newval") Pet Color
                input(type="text" name="pet_color" required) 
                label(for="newval") Pet House
                input(type="text" name="pet_house" required) 
                input(type="submit" value="submit")

